definition
	EVALUATION[at0000] matches {	-- Downton Fall Risk Index
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Known previous falls
						value matches {
							0|[local::at0003], 	-- No
							1|[local::at0004]; 	-- Yes
							0  	-- assumed value
						}
					}
					CLUSTER[at0005] occurrences matches {0..1} matches {	-- Medications
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0006] occurrences matches {0..1} matches {	-- None
								value matches {
									DV_BOOLEAN matches {
										value matches {True, False; False}
									}
								}
							}
							ELEMENT[at0007] occurrences matches {0..1} matches {	-- Tranquilizers/sedatives/neuroleptics
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0008] occurrences matches {0..1} matches {	-- Diuretics
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0009] occurrences matches {0..1} matches {	-- Antihypertensives (other than diuretics)
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0010] occurrences matches {0..1} matches {	-- Antiparkinsonian drugs
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0011] occurrences matches {0..1} matches {	-- Antidepressants
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0012] occurrences matches {0..1} matches {	-- Other medications
								value matches {
									DV_BOOLEAN matches {
										value matches {True, False; False}
									}
								}
							}
							ELEMENT[at0015] occurrences matches {0..1} matches {	-- Medication score
								value matches {
									DV_COUNT matches {
										magnitude matches {|0..5|}
									}
								}
							}
						}
					}
					CLUSTER[at0016] occurrences matches {0..1} matches {	-- Sensory deficits
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0017] occurrences matches {0..1} matches {	-- None
								value matches {
									DV_BOOLEAN matches {
										value matches {True, False; False}
									}
								}
							}
							ELEMENT[at0018] occurrences matches {0..1} matches {	-- Visual impairment
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0019] occurrences matches {0..1} matches {	-- Hearing impairment
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0020] occurrences matches {0..1} matches {	-- Motor impairment
								value matches {
									0|[local::at0013], 	-- Absent
									1|[local::at0014]; 	-- Present
									0  	-- assumed value
								}
							}
							ELEMENT[at0021] occurrences matches {0..1} matches {	-- Sensory score
								value matches {
									DV_COUNT matches {
										magnitude matches {|0..3|}
									}
								}
							}
						}
					}
					ELEMENT[at0022] occurrences matches {0..1} matches {	-- Mental state
						value matches {
							0|[local::at0023], 	-- Oriented
							1|[local::at0024]; 	-- Confused
							0  	-- assumed value
						}
					}
					CLUSTER[at0025] occurrences matches {0..1} matches {	-- Walking
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0026] occurrences matches {0..1} matches {	-- Ability to walk
								value matches {
									DV_CODED_TEXT matches {
										defining_code matches {
											[local::
											at0027, 	-- Safe with or without walking aids
											at0028, 	-- Unsafe
											at0029; 	-- Unable
											at0027]	-- assumed value
										}
									}
								}
							}
							ELEMENT[at0030] occurrences matches {0..1} matches {	-- Walking ability score
								value matches {
									DV_COUNT matches {
										magnitude matches {|0..1|}
									}
								}
							}
						}
					}
					ELEMENT[at0031] occurrences matches {0..1} matches {	-- Total score
						value matches {
							DV_COUNT matches {
								magnitude matches {|0..11|}
							}
						}
					}
					ELEMENT[at0032] occurrences matches {0..1} matches {	-- Risk group
						value matches {
							0|[local::at0033], 	-- Low-risk group
							1|[local::at0034]  	-- High-risk group
						}
					}
					ELEMENT[at0035] occurrences matches {0..1} matches {	-- Review date/time
						value matches {
							DV_DATE_TIME matches {*}
						}
					}
				}
			}
		}
	}

