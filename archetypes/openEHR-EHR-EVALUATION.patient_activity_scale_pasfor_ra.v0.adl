	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the result of the Patient Activity Scale  (PAS) for RA assessment.">
			use = <"PAS can be used for patients with rheumatoid arthritis(RA). 
Provide recommendations related to PAS scores obtained in patient assessment.
Interpretation:

PAS  score 0.00-0.25 = Disease activity is Remission

PAS  score 0.26-3.70 = Disease activity is Low/minimal

PAS  score 3.71-7.99 = Disease activity is Moderate

PAS score 8.00-10.00 = Disease activity is High/severe">
			keywords = <"Patient Activity Scale ", "PAS", "Rheumatoid Arthritis (RA)", "HAQ-DI", "visual analog scale (VAS)">
			misuse = <"PAS cannot be used for patients for whom treatment changed because of side effects since disease activity status is indeterminate.">
			copyright = <"@CambioCDS">
		>
	>
	lifecycle_state = <"AuthorDraft">
	other_contributors = <>
	other_details = <
		["references"] = <"Primary Reference
