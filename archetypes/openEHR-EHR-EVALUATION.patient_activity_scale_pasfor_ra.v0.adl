	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the result of the Patient Activity Scale  (PAS) assessment.">
			use = <"Provide recommendations related to scores obtained in patient assessment.
Interpretation:

PAS  score 0.00-0.25 = Disease activity is Remission

PAS  score 0.26-3.70 = Disease activity is Low/minimal

PAS  score 3.71-7.99 = Disease activity is Moderate

PAS score 8.00-10.00 = Disease activity is High/severe">
			keywords = <"Patient Activity Scale ", "PAS", "Rheumatoid Arthritis (RA)">
			misuse = <"PAS cannot be used for patients for whom treatment changed because of side effects since disease activity status is indeterminate.">
			copyright = <"@CambioCDS">
		>
	>
	lifecycle_state = <"AuthorDraft">
	other_contributors = <>
	other_details = <
		["references"] = <"Wolfe, F., Michaud, K., & Pincus, T. (2005). A composite disease activity scale for clinical practice, observational studies, and clinical trials: the patient activity scale (PAS/PAS-II). The Journal of rheumatology, 32(12), 2410-2415.

Anderson, J., Caplan, L., Yazdany, J., Robbins, M. L., Neogi, T., Michaud, K., ... & Kazi, S. (2012). Rheumatoid arthritis disease activity measures: American College of Rheumatology recommendations for use in clinical practice. Arthritis care & research, 64(5), 640-647.">
		["MD5-CAM-1.0.1"] = <"B4826EE053E09E4127B141B598F6CAC8">
	>

definition
	EVALUATION[at0000] matches {	-- Patient activity scale pas for ra
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Disease Activity
						value matches {
							1|[local::at0003], 	-- Remission
							2|[local::at0004], 	-- Low/Minimal
							3|[local::at0005], 	-- Moderate
							4|[local::at0006]  	-- High/Sever
						}
					}
				}
			}
		}
	}

