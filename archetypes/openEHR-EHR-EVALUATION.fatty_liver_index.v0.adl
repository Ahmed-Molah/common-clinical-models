definition
	EVALUATION[at0000] matches {	-- Fatty liver index
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Calculate Fatty Liver Index (FLI)
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::380]>
								list = <
									["1"] = <
										units = <"1">
									>
								>
							>
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {	-- Fatty Liver Index (FLI) interpretation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005, 	-- Fatty Liver Index <30. Low Risk. Diagnosis: fatty liver ruled out (LR- = 0.2)
									at0006, 	-- Fatty Liver Index 30 to <60. Intermediate Risk. Diagnosis: fatty liver neither ruled in nor ruled out
									at0007]	-- Fatty Liver Index ≥60. High Risk. Diagnosis: fatty liver ruled in (LR+ = 4.3)
								}
							}
						}
					}
				}
			}
		}
	}

