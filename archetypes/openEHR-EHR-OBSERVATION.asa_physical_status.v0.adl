definition
	OBSERVATION[at0000] matches {	-- Asa physical status
		data matches {
			HISTORY[at0001] matches {	-- Event Series
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..1} matches {	-- Any event
						data matches {
							ITEM_TREE[at0003] matches {	-- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {	-- Description
										value matches {
											1|[local::at0008], 	-- Normal healthy patient
											2|[local::at0009], 	-- Patient with mild systemic disease
											3|[local::at0010], 	-- Patient with severe systemic disease
											4|[local::at0011], 	-- Patient with severe systemic disease that is a constant threat to life
											5|[local::at0012], 	-- Moribund patient not expected to survive without the operation
											6|[local::at0013]  	-- Declared brain-dead patient whose organs are being removed for donor purposes
										}
									}
									ELEMENT[at0005] occurrences matches {0..1} matches {	-- Emergency surgery
										value matches {
											0|[local::at0006], 	-- No
											1|[local::at0007]  	-- Yes
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {	-- ASA Classification
										value matches {
											1|[local::at0015], 	-- ASA1
											2|[local::at0016], 	-- ASA 2
											3|[local::at0017], 	-- ASA 3
											4|[local::at0018], 	-- ASA 4
											5|[local::at0019], 	-- ASA 5
											6|[local::at0020], 	-- ASA 6
											7|[local::at0021], 	-- ASA 1E
											8|[local::at0022], 	-- ASA 2E
											9|[local::at0023], 	-- ASA 3E
											10|[local::at0024], 	-- ASA 4E
											11|[local::at0025], 	-- ASA 5E
											12|[local::at0026]  	-- ASA 6E
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}

