archetype (adl_version=1.4)
	openEHR-EHR-EVALUATION.hospital_readmission_score.v0

concept
	[at0000]	-- Hospital score
language
	original_language = <[ISO_639-1::en]>
description
	original_author = <
		["name"] = <"Winner Ng">
		["email"] = <"dokter.winner@gmail.com">
	>
	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"The tool for predicting 30-day readmission.">
			use = <"To record and predict 30-day of potentially avoidable readmission on adult patient, both for medical and surgical cases.">
			keywords = <"readmission", "prediction", "score", "hospital">
			misuse = <"Not to be used in pediatric patient.">
			copyright = <"">
		>
	>
	lifecycle_state = <"0">
	other_contributors = <>
	other_details = <
		["references"] = <"Donzé JD, Williams MV, Robinson EJ, Zimlichman E, Aujesky D, Vasilevskis EE, et al. International Validity of the HOSPITAL Score to Predict 30-Day Potentially Avoidable Hospital Readmissions. JAMA Internal Medicine. 2016;176(4):496–502.">
		["MD5-CAM-1.0.1"] = <"74D1FE09D39B6237FE5BE5C9D664C658">
	>

definition
	EVALUATION[at0000] matches {	-- Hospital score
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Hemoglobin level at discharge < 12g/dL
						value matches {
							0|[local::at0004], 	-- No
							1|[local::at0003]  	-- Yes
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Discharge from an Oncology service
						value matches {
							0|[local::at0007], 	-- No
							1|[local::at0006]  	-- Yes
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {	-- Sodium level at discharge < 135 mmol/L
						value matches {
							0|[local::at0010], 	-- No
							1|[local::at0009]  	-- Yes
						}
					}
					ELEMENT[at0011] occurrences matches {0..1} matches {	-- Procedure during hospital stay (any ICD-9 coded procedure)
						value matches {
							0|[local::at0013], 	-- No
							1|[local::at0012]  	-- Yes
						}
					}
					ELEMENT[at0014] occurrences matches {0..1} matches {	-- Index of admission type
						value matches {
							0|[local::at0016], 	-- Elective
							1|[local::at0015]  	-- Urgent or emergent
						}
					}
					ELEMENT[at0017] occurrences matches {0..1} matches {	-- Number of hospital admission(s) during the previous year
						value matches {
							0|[local::at0018], 	-- 0-1
							2|[local::at0019], 	-- 2-5
							5|[local::at0020]  	-- >5
						}
					}
					ELEMENT[at0021] occurrences matches {0..1} matches {	--  Length of stay ≥ 5 days
						value matches {
							0|[local::at0022], 	-- No
							2|[local::at0023]  	-- Yes
						}
					}
					ELEMENT[at0028] occurrences matches {0..1} matches {	-- Total score
						value matches {
							DV_COUNT matches {*}
						}
					}
					ELEMENT[at0024] occurrences matches {0..1} matches {	-- Risk of 30-day Potentially Avoidable Readmissions
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0025, 	-- Low
									at0026, 	-- Intermediate
									at0027]	-- High
								}
							}
						}
					}
				}
			}
		}
	}

