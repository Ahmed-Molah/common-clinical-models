definition
	EVALUATION[at0000] matches {	-- Emergency hf mortality risk grade - utvärdering
		data matches {
			ITEM_TREE[at0001] matches {	-- *Tree(en)
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Riskgrupp - kvantil
						value matches {
							0|[local::at0008], 	-- Grupp 1
							1|[local::at0009], 	-- Grupp 2
							2|[local::at0010], 	-- Grupp 3
							3|[local::at0011], 	-- Grupp 4
							4|[local::at0012], 	-- Grupp 5a
							5|[local::at0013]  	-- Grupp 5b
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- 7-dagarsmortalitet
						value matches {
							0|[local::at0014], 	-- 0.3%
							1|[local::at0015], 	-- 0.7% 
							2|[local::at0016], 	-- 1.9%
							3|[local::at0017], 	-- 3.5%
							4|[local::at0018]  	-- 8.2%
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {	-- Riskvärdering
						value matches {
							0|[local::at0005], 	-- Låg risk
							1|[local::at0006], 	-- Mellanrisk
							2|[local::at0007]  	-- Hög risk
						}
					}
				}
			}
		}
	}

