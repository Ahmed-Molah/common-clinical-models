definition
	EVALUATION[at0000] matches {	-- Rule of 7s for lyme meningitis
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Number of days of headache
						value matches {
							0|[local::at0003], 	-- <7
							1|[local::at0004]  	-- ≥7
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- CSF (cerebrospinal fluid) mononuclear cells (Lymphocytes and monocytes)
						value matches {
							0|[local::at0007], 	-- <70%
							1|[local::at0008]  	-- ≥70%
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {	-- 7th (or other) cranial nerve palsy
						value matches {
							0|[local::at0009], 	-- No
							1|[local::at0010]  	-- Yes
						}
					}
					ELEMENT[at0011] occurrences matches {0..1} matches {	-- Rule of 7s
						value matches {
							DV_COUNT matches {
								magnitude matches {|0..3|}
							}
						}
					}
					ELEMENT[at0012] occurrences matches {0..1} matches {	-- Risk
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0013, 	-- Low risk for Lyme meningitis
									at0014]	-- Not low risk for Lyme meningitis
								}
							}
						}
					}
				}
			}
		}
	}

