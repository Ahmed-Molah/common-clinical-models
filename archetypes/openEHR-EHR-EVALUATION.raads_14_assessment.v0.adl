					description = <"Additional information about this recording">
				>
				["at0004"] = <
					text = <"Autism unlikely">
					description = <"RAADS-14 screen score = 0 - 13">
				>
				["at0005"] = <
					text = <"Autism likely">
					description = <"RAADS-14 screen score = 14 - 30">
				>
				["at0006"] = <
					text = <"Autism very likely">
					description = <"RAADS-14 screen score ≥31">
				>
			>
		>
	>
