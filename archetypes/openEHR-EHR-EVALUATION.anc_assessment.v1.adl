definition
	EVALUATION[at0000] matches {	-- ANC assessment
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Risk assessment
						value matches {
							0|[local::at0005], 	-- No Neutropenia
							1|[local::at0006], 	-- Mild neutropenia
							2|[local::at0007], 	-- Moderate neutropenia
							3|[local::at0026]  	-- Severe neutropenia
						}
					}
				}
			}
		}
	}

