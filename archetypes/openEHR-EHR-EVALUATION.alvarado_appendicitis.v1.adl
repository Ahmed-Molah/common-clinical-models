concept
	[at0000]	-- Alvarado appendicitis
language
	original_language = <[ISO_639-1::en]>
description
	original_author = <
		["name"] = <"Syeeda S Farruque">
		["organisation"] = <"Cambio Healthcare Systems">
		["date"] = <"2016-12-28">
	>
	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"The Alvarado score was developed to assist in diagnosing appendicitis in the early stages.">
			use = <"The total score, derived by adding up the individual scores for each of the 8 items ranges from 0 to 10 with score weights allocated thus:

+2 points - Right lower quadrant tenderness
+1 point - Elevated temperature (>37.3°C or 99.1°F)
+1 point - Rebound tenderness
+1 point - Migration of pain to the right lower quadrant
+1 point - Anorexia
+1 point - Nausea or vomiting
+2 point - Leukocytosis > 10,000
+1 point - Leukocyte left shift 

- A CT scan is recommended for scores 4-6 
- A surgical consultation for scores  ≥ 7. 
- For scores  ≤ 3: a CT scan is not needed due to the low probability of appendicitis.">
			keywords = <"Alvarado appendicitis", "acute appendicitis">
			misuse = <"This tool depends on a thorough clinical assessment made by the physician and care team and should only be used to assist diagnosis.">
			copyright = <"© Cambio Healthcare Systems">
		>
	>
	lifecycle_state = <"AuthorDraft">
	other_contributors = <>
	other_details = <
		["MD5-CAM-1.0.1"] = <"EB470FE8950A19916066E69A15FE70C6">
		["references"] = <"Ref. 1: Alvarado A. A practical score for the early diagnosis of acute appendicitis. Ann Emerg Med. 1986; 15(5): 557-64. 

Ref. 2: McKay R, Shepherd J. The use of the clinical scoring system by Alvarado in the decision to perform computed tomography for acute appendicitis in the ED. Am J Emerg Med. 2007; 25(5): 489-93. ">
	>

definition
	EVALUATION[at0000] matches {	-- Alvarado appendicitis
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Right Lower Quadrant Tenderness?
						value matches {
							0|[local::at0011], 	-- No
							2|[local::at0012]  	-- Yes
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Elevated Temperature (>37.3°C or 99.1°F)?
						value matches {
							0|[local::at0013], 	-- No
							1|[local::at0014]  	-- Yes
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {	-- Rebound Tenderness?
						value matches {
							0|[local::at0015], 	-- No
							1|[local::at0016]  	-- Yes
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Migration of Pain to the Right Lower Quadrant?
						value matches {
							0|[local::at0017], 	-- No
							1|[local::at0018]  	-- Yes
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {	-- Anorexia?
						value matches {
							0|[local::at0019], 	-- No
							1|[local::at0020]  	-- Yes
						}
					}
					ELEMENT[at0007] occurrences matches {0..1} matches {	-- Nausea or Vomiting?
						value matches {
							0|[local::at0021], 	-- No
							1|[local::at0022]  	-- Yes
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {	-- Leukocytosis > 10,000?
						value matches {
							0|[local::at0023], 	-- No
							2|[local::at0024]  	-- Yes
						}
					}
					ELEMENT[at0009] occurrences matches {0..1} matches {	-- Leukocyte Left Shift
						value matches {
							0|[local::at0025], 	-- No
							1|[local::at0026]  	-- Yes
						}
					}
					ELEMENT[at0027] occurrences matches {0..1} matches {	-- Total score
						value matches {
							DV_COUNT matches {
								magnitude matches {|0..10|}
							}
						}
					}
					ELEMENT[at0010] occurrences matches {0..1} matches {	-- Comment
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
	}

