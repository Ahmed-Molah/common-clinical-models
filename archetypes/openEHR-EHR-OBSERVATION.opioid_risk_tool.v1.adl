definition
	OBSERVATION[at0000] matches {	-- Opioid Risk Tool
		data matches {
			HISTORY[at0001] matches {	-- Event Series
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..1} matches {	-- Any event
						data matches {
							ITEM_TREE[at0003] matches {	-- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {	-- Age 16-45
										value matches {
											0|[local::at0017], 	-- No
											1|[local::at0018]  	-- yes
										}
									}
									ELEMENT[at0005] occurrences matches {0..1} matches {	-- Hx of preadolescent sexual abuse
										value matches {
											0|[local::at0019], 	-- no
											3|[local::at0020]  	-- yes
										}
									}
									ELEMENT[at0006] occurrences matches {0..1} matches {	-- Hx of depression
										value matches {
											0|[local::at0021], 	-- no
											1|[local::at0022]  	-- yes
										}
									}
									ELEMENT[at0007] occurrences matches {0..1} matches {	-- Hx of ADD, OCD, Bipolar or Schizophrenia
										value matches {
											0|[local::at0023], 	-- no
											2|[local::at0024]  	-- yes
										}
									}
									ELEMENT[at0008] occurrences matches {0..1} matches {	-- Hx of alcohol abuse
										value matches {
											0|[local::at0025], 	-- no
											3|[local::at0026]  	-- yes
										}
									}
									ELEMENT[at0009] occurrences matches {0..1} matches {	-- Hx of illegal drug abuse
										value matches {
											0|[local::at0027], 	-- no
											4|[local::at0028]  	-- yes
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {	-- Hx of prescription drug use
										value matches {
											0|[local::at0029], 	-- no
											5|[local::at0030]  	-- yes
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {	-- FHx alcohol abuse
										value matches {
											0|[local::at0039], 	-- no
											1|[local::at0040]  	-- yes
										}
									}
									ELEMENT[at0012] occurrences matches {0..1} matches {	-- FHx illegal drug abuse
										value matches {
											0|[local::at0041], 	-- no
											1|[local::at0042]  	-- yes
										}
									}
									ELEMENT[at0013] occurrences matches {0..1} matches {	-- FHx prescription drug abuse
										value matches {
											0|[local::at0037], 	-- no
											4|[local::at0038]  	-- yes
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {	-- Total Score (m)
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..26|}
											}
										}
									}
									ELEMENT[at0016] occurrences matches {0..1} matches {	-- Total Score (f)
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..26|}
											}
										}
									}
									ELEMENT[at0015] occurrences matches {0..1} matches {	-- Comment
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}

