definition
	EVALUATION[at0000] matches {	-- QIDS utvärdering
		data matches {
			ITEM_TREE[at0001] matches {	-- *Tree(en)
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- QIDS
						value matches {
							0|[local::at0003], 	-- Sannolikt ej depression
							1|[local::at0004], 	-- Indikerar lindrig depression
							2|[local::at0005], 	-- Indikerar måttlig depression
							3|[local::at0006], 	-- Indikerar svår depression
							4|[local::at0007]  	-- Indikerar mycket svår depression
						}
					}
				}
			}
		}
	}

