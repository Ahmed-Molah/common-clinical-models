	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To classify CKD using the measured or estimated GFR value.">
			use = <"This guide classifies CKD based on GFR into one of five stages according to KDOQI Clinical Practice Guidelines for Chronic Kidney Disease: Evaluation, Classification, and Stratification.

Stage 1 (kidney damage with normal or increased GFR), ≥90 ml/min/1.73 m2
Stage 2 (kidney damage with mild reduction in GFR), 60 - 89 ml/min/1.73 m2
Stage 3 (moderate reduction in GFR), 30 - 59 ml/min/1.73 m2
Stage 4 (severe reduction in GFR), 15 - 29 ml/min/1.73 m2
Stage 5 (kidney failure) <15 ml/min/1.73 m2 (or patient on dialysis)">
			keywords = <"ckd", "kidney", "renal function", "gfr", "KDOQI">
			misuse = <"">
			copyright = <"© Cambio Healthcare Systems">
		>
		["sv"] = <
			language = <[ISO_639-1::sv]>
			purpose = <"Att klassificera en patients njurfunktion med hjälp av GFR.">
			use = <"Diagnosen CKD kräver två prover minst 90 dagars mellanrum. Historiska värden kan användas.">
			keywords = <"ckd", "njure", "njurfunktion", "gfr">
			misuse = <"">
			copyright = <"">
		>
	>
