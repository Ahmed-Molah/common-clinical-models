					description = <"*">
				>
				["at0006"] = <
					text = <"4 - Njursjukdom med kraftigt nedsatt njurfunktion">
					description = <"*">
				>
				["at0007"] = <
					text = <"5 - Njursjukdom i slutstadium">
					description = <"*">
				>
			>
		>
	>
