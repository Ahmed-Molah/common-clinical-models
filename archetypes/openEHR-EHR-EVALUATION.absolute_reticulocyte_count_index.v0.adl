definition
	EVALUATION[at0000] matches {	-- Absolute reticulocyte count index
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- % of reticulocytes
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::507]>
								list = <
									["1"] = <
										units = <"%">
										magnitude = <|0.0..100.0|>
									>
								>
							>
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Hematocrit
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::507]>
								list = <
									["1"] = <
										units = <"%">
										magnitude = <|0.0..100.0|>
									>
								>
							>
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {	-- Normal Hematocrit
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::507]>
								list = <
									["1"] = <
										units = <"%">
										magnitude = <|0.0..100.0|>
									>
								>
							>
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Reticulocyte Count
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::507]>
								list = <
									["1"] = <
										units = <"%">
										magnitude = <|0.0..100.0|>
									>
								>
							>
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {	-- Reticulocyte Index
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::380]>
								list = <
									["1"] = <
										units = <"1">
										magnitude = <|>=0.0|>
									>
								>
							>
						}
					}
					ELEMENT[at0007] occurrences matches {0..1} matches {	-- Index interpretation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0008, 	-- Adequate. Reticulocyte Index ≥ 2 indicates adequate response. 
									at0009]	-- Hypoproliferation. Reticulocyte Index<2 indicates hypoproliferation.
								}
							}
						}
					}
					ELEMENT[at0010] occurrences matches {0..1} matches {	-- Warning
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011, 	-- Very low; double-check.
									at0012]	-- Very high; double-check.
								}
							}
						}
					}
				}
			}
		}
	}

