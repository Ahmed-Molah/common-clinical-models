definition
	EVALUATION[at0000] matches {	-- Pediatric appendicitis risk calculator assessment
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Pediatric ED Setting Risk Group
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0003, 	-- Ultra low Risk
									at0004, 	-- Low Risk
									at0005, 	-- Low-moderate Risk
									at0006, 	-- Moderate Risk
									at0007, 	-- Moderate-high Risk
									at0008]	-- High Risk
								}
							}
						}
					}
					ELEMENT[at0009] occurrences matches {0..1} matches {	-- Clinical Recommendations in Pediatric ED Setting 
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0010, 	-- Outpatient follow up appropriate if PCP evaluation available within 24 hrs, no diagnostic imaging required
									at0011, 	-- Consider ED observation for 6 hrs for serial exams. If improved, ensure outpatient follow-up in 24 hrs, no imaging required.
									at0012, 	-- If patients symptoms <24 hrs, consider observation for 12 hrs. If not improved, obtain ultrasound and repeat CBC. If pain ≥24 hrs of symptoms, obtain ultrasound to evaluate for appendicitis
									at0013, 	-- Ultrasound recommended as first line imaging. Admit for observation if ultrasound equivocal
									at0014, 	-- Ultrasound recommended as first line imaging, CT if ultrasound equivocal
									at0015, 	-- Consult surgery. Consider imaging based on surgery recommendations
									at0016]	-- Consult surgery, imaging not required
								}
							}
						}
					}
					ELEMENT[at0017] occurrences matches {0..1} matches {	-- Community Setting Risk Group
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0018, 	-- Very Low Risk
									at0019, 	-- Low Risk
									at0020, 	-- Intermediate Risk
									at0021]	-- High Risk
								}
							}
						}
					}
				}
			}
		}
	}

