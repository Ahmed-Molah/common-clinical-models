concept
	[at0000]	-- Nexus chest decision instrument for blunt chest trauma
language
	original_language = <[ISO_639-1::en]>
description
	original_author = <
		["name"] = <"Therese Lindberg">
		["email"] = <"therese.lindberg@cambio.se">
		["organisation"] = <"Cambio CDS">
		["date"] = <"2020-11-28">
	>
	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To determine which patients require chest imaging after blunt trauma.">
			use = <"NEXUS Score is calculated from 7 parameters: age, rapid deceleration mechanism, chest pain, intoxication, altered mental status, distracting painful injury, tenderness to chest wall palpation. 

Applies to patients ≥15 years old with blunt trauma within the past 24 hours in the ED.">
			keywords = <"rapid deceleration mechanism", "chest pain", "intoxication", "altered mental status", "distracting painful injury", "tenderness to chest wall palpation", "NEXUS", "score", "thoracic imaging required", "CT", "instrument for blunt chest trauma">
			misuse = <"Do not use if patient <15 years old.">
			copyright = <"@CambioCDS">
		>
	>
	lifecycle_state = <"0">
	other_contributors = <>
	other_details = <
		["references"] = <"1. Rodriguez RM, Hendey GW, Mower W, Kea B, Fortman J, Merchant G, Hoffman JR. Derivation of a decision instrument for selective chest radiography in blunt trauma. J Trauma. 2011 Sep;7(3):549-53. PMID: 21045745.">
		["current_contact"] = <"Therese Lindberg, Cambio CDS<therese.lindberg@cambio.se>">
		["MD5-CAM-1.0.1"] = <"7EDFB629513FE98884A1A628F9232C82">
	>

definition
	EVALUATION[at0000] matches {	-- Nexus chest decision instrument for blunt chest trauma
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Age >60 years
						value matches {
							0|[local::at0003], 	-- No
							1|[local::at0004]  	-- Yes
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Rapid deceleration mechanism (Fall from >20 ft (>6m), MVC >40 mph (>64km/h)) 
						value matches {
							0|[local::at0006], 	-- No
							1|[local::at0007]  	-- Yes
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {	-- Chest pain
						value matches {
							0|[local::at0009], 	-- No
							1|[local::at0010]  	-- Yes
						}
					}
					ELEMENT[at0011] occurrences matches {0..1} matches {	-- Intoxication
						value matches {
							0|[local::at0012], 	-- No
							1|[local::at0013]  	-- Yes
						}
					}
					ELEMENT[at0014] occurrences matches {0..1} matches {	-- Altered mental status
						value matches {
							0|[local::at0015], 	-- No
							1|[local::at0016]  	-- Yes
						}
					}
					ELEMENT[at0017] occurrences matches {0..1} matches {	-- Distracting painful injury
						value matches {
							0|[local::at0018], 	-- No
							1|[local::at0019]  	-- Yes
						}
					}
					ELEMENT[at0020] occurrences matches {0..1} matches {	-- Tenderness to chest wall palpation 
						value matches {
							0|[local::at0021], 	-- No
							1|[local::at0022]  	-- Yes
						}
					}
					ELEMENT[at0023] occurrences matches {0..1} matches {	-- NEXUS Score
						value matches {
							DV_COUNT matches {*}
						}
					}
					ELEMENT[at0024] occurrences matches {0..1} matches {	-- Interpretation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0025, 	-- No thoracic imaging required. NEXUS Score is 99% sensitive for clinically significant thoracic injury.
									at0026]	-- In well-appearing patient with no evidence of multi-organ injury, consider Chest X-ray (CXR) only without CT. In ill-appearing patients and/or those who will receive workup for other serious injury, consider chest CT as well.
								}
							}
						}
					}
				}
			}
		}
	}

