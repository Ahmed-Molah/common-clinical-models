										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {	-- CCI 
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::380]>
												list = <
													["1"] = <
														units = <"1">
													>
												>
											>
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {	-- Interpretation
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0012, 	-- Successful transfusion
													at0013]	-- Repeat transfusion. Two CCIs below the cutoff indicate refractoriness
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
