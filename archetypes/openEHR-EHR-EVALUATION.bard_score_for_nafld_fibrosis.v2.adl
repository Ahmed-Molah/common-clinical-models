definition
	EVALUATION[at0000] matches {	-- Bard score for nafld fibrosis
		data matches {
			ITEM_TREE[at0001] matches {	-- Träd
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- BMI >= 28
						value matches {
							0|[local::at0006], 	-- No
							1|[local::at0007]  	-- Yes
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Diabetes Mellitus
						value matches {
							0|[local::at0008], 	-- No
							1|[local::at0009]  	-- Yes
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {	-- AST/ALT ratio > 0.8
						value matches {
							0|[local::at0010], 	-- No
							2|[local::at0011]  	-- Yes
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- BARD score
						value matches {
							DV_COUNT matches {
								magnitude matches {|0..4|}
							}
						}
					}
				}
			}
		}
	}

