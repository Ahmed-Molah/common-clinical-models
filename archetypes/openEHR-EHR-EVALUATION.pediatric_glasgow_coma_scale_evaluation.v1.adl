definition
	EVALUATION[at0000] matches {	-- Pediatric Glasgow Coma Scale - utvärdering
		data matches {
			ITEM_TREE[at0001] matches {	-- *Tree(en)
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Resultat
						value matches {
							0|[local::at0004], 	-- Tecken på mild huvudskada
							1|[local::at0005], 	-- Tecken på måttlig huvudskada
							2|[local::at0006]  	-- Tecken på svår huvudskada
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Rekommendation
						value matches {
							0|[local::at0007], 	-- Patienten kräver ej övervakning
							1|[local::at0008]  	-- Patienten kräver övervakning
						}
					}
				}
			}
		}
	}

