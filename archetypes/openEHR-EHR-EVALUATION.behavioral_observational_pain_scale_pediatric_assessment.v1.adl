definition
	EVALUATION[at0000] matches {	-- Behavioral observational pain scale pediatric assessment
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Pain scale
						value matches {
							0|[local::at0004], 	-- Minimal or no pain
							1|[local::at0005]  	-- Significant pain present
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Recommendation
						value matches {
							0|[local::at0006], 	-- Consider reassessing after 30 minutes.
							1|[local::at0007]  	-- Consider analgesia and reassess afterward.
						}
					}
				}
			}
		}
	}

