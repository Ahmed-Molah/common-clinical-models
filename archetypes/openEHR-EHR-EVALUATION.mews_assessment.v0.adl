	>

definition
	EVALUATION[at0000] matches {	-- Modified Early Warning Score (MEWS) Assessment
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- MEWS assessment
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0003, 	-- Lower risk of deterioration or death
									at0004]	-- Increased likelihood of deterioration or death
								}
							}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Recommendation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0010, 	-- Continue routine monitoring
									at0009, 	-- Consider increased frequency of monitoring and inform nurse in charge
									at0007]	-- Consider higher level of care (ICU or HDU) and inform critical care team
								}
							}
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {	-- Comment
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
	}

