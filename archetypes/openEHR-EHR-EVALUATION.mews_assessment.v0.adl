concept
	[at0000]	-- Modified Early Warning Score (MEWS) Assessment
language
	original_language = <[ISO_639-1::en]>
description
	original_author = <
		["name"] = <"Eneimi Allwell-Brown">
		["email"] = <"models@cambiocds.com">
