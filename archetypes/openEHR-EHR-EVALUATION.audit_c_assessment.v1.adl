definition
	EVALUATION[at0000] matches {	-- AUDIT-C utvärdering
		data matches {
			ITEM_TREE[at0001] matches {	-- *Tree(en)
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- AUDIT-C kvinna
						value matches {
							0|[local::at0003], 	-- Förenligt med normal konsumption
							1|[local::at0004], 	-- Förenligt med riskbruk
							2|[local::at0005]  	-- Förenligt med missbruk och potentiell leverskada
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {	-- AUDIT-C man
						value matches {
							0|[local::at0007], 	-- Förenligt med normal konsumption
							1|[local::at0008], 	-- Förenligt med riskbruk
							2|[local::at0009]  	-- Förenligt med missbruk och potentiell leverskada
						}
					}
				}
			}
		}
	}

