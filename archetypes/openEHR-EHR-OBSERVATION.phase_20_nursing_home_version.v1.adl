definition
	OBSERVATION[at0000] matches {	-- PHASE-20 för Särskilt boende/med hemsjukvård
		data matches {
			HISTORY[at0001] matches {	-- Händelseförlopp
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..1} matches {	-- Vilken händelse som helst
						data matches {
							ITEM_TREE[at0003] matches {	-- Träd
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {	-- Hur mycket har patienten kunnat delta i bedömningen?
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0005, 	-- Helt
													at0006]	-- Delvis
												}
											}
										}
									}
									ELEMENT[at0008] occurrences matches {0..1} matches {	-- Är patienten
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0009, 	-- Uppegående
													at0010, 	-- Rullstolsburen
													at0011]	-- Sängbunden
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}

