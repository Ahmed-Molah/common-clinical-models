          }
        }
      }
    },
    "rules": {
      "gt0010": {
        "id": "gt0010",
        "priority": 2,
        "when": [
          "$gt0003|Choose available data|==local::at0005|Serum digoxin level|",
          "$gt0005|Weight|!=null",
          "$gt0005|Weight|.unit=='kg'",
          "$gt0006|Serum digoxin level|!=null",
          "$gt0006|Serum digoxin level|.unit=='nanomol'"
        ],
        "then": [
          "$gt0009|Vials|.magnitude=round($gt0006.magnitude*$gt0005.magnitude/100)",
          "$gt0009|Vials|.precision=1"
        ]
      },
      "gt0011": {
        "id": "gt0011",
        "priority": 1,
        "when": [
          "$gt0003|Choose available data|==local::at0006|Amount ingested|",
          "$gt0007|Amount ingested|!=null"
        ],
        "then": [
          "$gt0009|Vials|.magnitude=round(($gt0007.magnitude/0.5)*0.8)",
          "$gt0009|Vials|.precision=1"
        ]
      }
    }
  },
