    },
    "rules": {
      "gt0017": {
        "id": "gt0017",
        "priority": 4,
        "when": [
          "$gt0003|Age|!=null",
          "$gt0005|Serum Bilirubin|!=null",
          "$gt0007|Creatinine|!=null",
          "$gt0009|INR|!=null"
        ],
        "then": [
          "$gt0013|ABIC score|.magnitude=($gt0003.magnitude*0.1)+($gt0005.magnitude*0.08)+($gt0007.magnitude*0.3)+($gt0009.magnitude*0.8)"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 3,
        "when": [
          "$gt0013|ABIC score|.magnitude<6.71"
        ],
        "then": [
          "$gt0014|Risk group|='Low'",
          "$gt0015|Survival at 90 days|='100%'",
          "$gt0016|Survival at 1 year|='97.1%'"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 2,
        "when": [
          "$gt0013|ABIC score|.magnitude>=6.71",
          "$gt0013|ABIC score|.magnitude<9"
        ],
        "then": [
          "$gt0014|Risk group|='Intermediate'",
          "$gt0015|Survival at 90 days|='70%'",
          "$gt0016|Survival at 1 year|='64.3%'"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 1,
        "when": [
          "$gt0013|ABIC score|.magnitude>=9"
        ],
        "then": [
          "$gt0014|Risk group|='High'",
          "$gt0015|Survival at 90 days|='25%'",
          "$gt0016|Survival at 1 year|='33.3%'"
        ]
      }
    }
