        "model_id": "openEHR-EHR-EVALUATION.blast_lung_injury_severity_score.v0",
        "template_id": "openEHR-EHR-EVALUATION.blast_lung_injury_severity_score.v0",
        "type": "OUTPUT",
        "elements": {
