    "lifecycle_state": "Not set",
    "details": {
      "en": {
        "id": "en",
        "purpose": "Stratifies primary blast lung injuries into three categories to guide ventilator treatment.",
        "keywords": [
          "Lung",
          "Injury"
        ],
        "use": "Use in patients who have sustained blast injury and have respiratory symptoms (e.g. cough, cyanosis, dyspnea, hemoptysis).\n\nUseful in guiding triage decisions in the setting of mass casualties, determining ventilation treatment, and predicting outcomes.\n\nBLI severity correlates with the likelihood of developing acute respiratory distress syndrome (ARDS), and can be helpful to delineate patients who will require more aggressive and potentially unconventional respiratory care (e.g. nitric oxide, high-frequency jet ventilation, independent lung ventilation, or extracorporeal membrane oxygenation).\n",
        "copyright": "@Cambio CDS"
      }
    },
    "other_details": {
      "references": "R Pizov;A Oppenheim-Eden;I Matot;Y G Weiss;L A Eidelman;A I Rivkind;C L Sprung\nISSN: 0012-3692 , 1931-3543; DOI: 10.1378/chest.115.1.165\nChest. , 1999, Vol.115(1), p.165-172"
    }
  },
  "definition": {
    "data_bindings": {
      "gt0004": {
        "id": "gt0004",
        "model_id": "openEHR-EHR-OBSERVATION.blast_lung_injury_severity_score.v0",
        "template_id": "openEHR-EHR-OBSERVATION.blast_lung_injury_severity_score.v0",
        "type": "INPUT",
        "elements": {
          "gt0005": {
