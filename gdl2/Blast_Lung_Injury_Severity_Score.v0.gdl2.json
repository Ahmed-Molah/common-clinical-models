          }
        }
      },
      "gt0010": {
        "id": "gt0010",
        "model_id": "openEHR-EHR-OBSERVATION.blast_lung_injury_severity_score.v0",
        "template_id": "openEHR-EHR-OBSERVATION.blast_lung_injury_severity_score.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0011": {
            "id": "gt0011",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0015]"
          }
        }
      }
    },
    "rules": {
      "gt0012": {
        "id": "gt0012",
        "priority": 4,
        "when": [
          "$gt0005|Chest x-ray|!=null",
          "$gt0006|Bronchial pleural fistula|!=null",
          "$gt0007|PaO₂/FiO₂|!=null"
        ],
        "then": [
          "$gt0011|Total Score|.magnitude=$gt0006.value+$gt0005.value+$gt0007.value"
        ]
      },
      "gt0013": {
        "id": "gt0013",
        "priority": 3,
        "when": [
          "$gt0011|Total Score|=='0'"
        ],
        "then": [
          "$gt0009|Evaluate|=0|local::at0003|Mild|"
        ]
      },
      "gt0014": {
        "id": "gt0014",
        "priority": 2,
        "when": [
          "$gt0011|Total Score|>='1'",
          "$gt0011|Total Score|<='4'"
        ],
        "then": [
          "$gt0009|Evaluate|=1|local::at0004|Moderate|"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 1,
        "when": [
          "$gt0011|Total Score|>='5'"
        ],
        "then": [
          "$gt0009|Evaluate|=2|local::at0005|Severe|"
        ]
      }
    }
  },
