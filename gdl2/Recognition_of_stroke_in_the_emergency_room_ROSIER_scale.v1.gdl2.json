          }
        }
      },
      "gt0011": {
        "id": "gt0011",
        "model_id": "openEHR-EHR-EVALUATION.recognition_of_stroke_in_the_emergency_room_rosier_scale.v0",
        "template_id": "openEHR-EHR-EVALUATION.recognition_of_stroke_in_the_emergency_room_rosier_scale.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0012": {
            "id": "gt0012",
            "path": "/data[at0001]/items[at0023]"
          },
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/items[at0024]"
          }
        }
      }
    },
    "rules": {
      "gt0002": {
        "id": "gt0002",
        "priority": 3,
        "when": [
          "$gt0004|Loss of consciousness or syncope|!=null",
          "$gt0005|Seizure activity|!=null",
          "$gt0006|Asymmetric facial weakness|!=null",
          "$gt0007|Asymmetric arm weakness|!=null",
          "$gt0008|Asymmetric leg weakness|!=null",
          "$gt0009|Speech disturbance|!=null",
          "$gt0010|Visual field defect|!=null"
        ],
        "then": [
          "$gt0012|ROSIER score|.magnitude=$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value-$gt0004.value-$gt0005.value"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 2,
        "when": [
          "$gt0012|ROSIER score|>0"
        ],
        "then": [
          "$gt0013|Likelihood of stroke|=local::at0026|Stroke possible|"
        ]
      },
      "gt0014": {
        "id": "gt0014",
        "priority": 1,
        "when": [
          "$gt0012|ROSIER score|<=0"
        ],
        "then": [
          "$gt0013|Likelihood of stroke|=local::at0025|Stroke unlikely|"
        ]
      }
    }
  },
