    "details": {
      "en": {
        "id": "en",
        "purpose": "To calculate the ROSIER Score in order to distinguish between acute stroke and stroke mimics.",
        "keywords": [
          "stroke",
          "ROSIER",
          "recognition of stroke in the emergency room scale",
          "scale",
          "seizure",
          "weakness",
          "speech disturbance",
          "defect"
        ],
        "use": "Use to calculate  ROSIER Score. The score is based on 7 parameters: Loss of consciousness or syncope, Seizure activity, Asymmetric facial weakness, Asymmetric arm weakness, Asymmetric leg weakness, Speech disturbance and Visual field defect.\n\nLikelihood of stroke:\nROSIER Score     Interpretation\nâ‰¤0                         Stroke unlikely\n>0                         Stroke possible",
        "copyright": "@CambioCDS"
      }
    },
    "other_details": {
      "references": "1. Nor AM, Davis J, Sen B, et al. The Recognition of Stroke in the Emergency Room (ROSIER) scale: development and validation of a stroke recognition instrument. Lancet Neurol. 2005;4(11):727-34."
    }
  },
  "definition": {
    "data_bindings": {
      "gt0003": {
        "id": "gt0003",
        "model_id": "openEHR-EHR-EVALUATION.recognition_of_stroke_in_the_emergency_room_rosier_scale.v0",
        "template_id": "openEHR-EHR-EVALUATION.recognition_of_stroke_in_the_emergency_room_rosier_scale.v0",
        "type": "INPUT",
        "elements": {
          "gt0004": {
