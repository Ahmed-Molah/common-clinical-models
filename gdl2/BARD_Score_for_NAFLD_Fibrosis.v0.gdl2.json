      "gt0015": {
        "id": "gt0015",
        "model_id": "openEHR-EHR-OBSERVATION.lab_test-ast.v1",
        "template_id": "openEHR-EHR-OBSERVATION.lab_test-ast.v1",
        "type": "INPUT",
        "elements": {
          "gt0016": {
            "id": "gt0016",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0078]"
          },
          "gt0031": {
            "id": "gt0031",
            "path": "/data/events/time"
          }
        }
      }
    },
    "default_actions": [
      "$gt0006|BMI >= 28|=0|local::at0007|No|",
      "$gt0017|AST/ALT ratio > 0.8|=0|local::at0011|No|"
    ],
    "rules": {
      "gt0035": {
        "id": "gt0035",
        "priority": 6,
        "when": [
          "$gt0006|BMI >= 28|==null",
          "$gt0012|Diabetes mellitus|==null",
          "$gt0017|AST/ALT ratio > 0.8|==null"
        ],
        "then": [
          "$gt0006|BMI >= 28|=0|local::at0007|No|",
          "$gt0012|Diabetes mellitus|=0|local::at0009|No|",
          "$gt0017|AST/ALT ratio > 0.8|=0|local::at0011|No|"
        ]
      },
      "gt0007": {
        "id": "gt0007",
        "priority": 5,
        "when": [
          "$gt0003|Body Mass Index|>=28,kg/m2"
        ],
        "then": [
          "$gt0006|BMI >= 28|=1|local::at0008|Yes|"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 4,
        "when": [
          "$gt0011|Diabetes Mellitus|==1|local::at0008|Yes|"
        ],
        "then": [
          "$gt0012|Diabetes mellitus|=1|local::at0010|Yes|"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 3,
        "when": [
          "$gt0014|ALT|.unit=='U/l'",
          "$gt0016|AST|.unit=='U/l'"
        ],
        "then": [
          "$gt0033|AST/ALT ratio|.magnitude=$gt0016.magnitude/$gt0014.magnitude"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 2,
        "when": [
          "$gt0033|AST/ALT ratio|>=0.8,U/l"
        ],
        "then": [
          "$gt0017|AST/ALT ratio > 0.8|=2|local::at0012|Yes|"
        ]
      },
      "gt0008": {
        "id": "gt0008",
        "priority": 1,
        "then": [
          "$gt0005|BARD Score|.magnitude=$gt0006.value+$gt0011.value+$gt0017.value"
        ]
      }
    }
  },
