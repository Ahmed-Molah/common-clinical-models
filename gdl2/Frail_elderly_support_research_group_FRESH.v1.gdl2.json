          }
        }
      }
    },
    "rules": {
      "gt0010": {
        "id": "gt0010",
        "priority": 3,
        "when": [
          "$gt0003|Decreased endurance (ends of a short walk on about 15-20 minutes)|!=null",
          "$gt0004|General fatigue/decreased strength in the last three months|!=null",
          "$gt0005|Often falls/thinks you will fall|!=null",
          "$gt0006|Need help making your purchases (get to the store, pick goods, pay, carry home)|!=null"
        ],
        "then": [
          "$gt0008|FRESH Score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value"
        ]
      },
      "gt0011": {
        "id": "gt0011",
        "priority": 2,
        "when": [
          "$gt0008|FRESH Score|>=2"
        ],
        "then": [
          "$gt0009|Assessment|=local::at0016|Need of further action|"
        ]
      },
      "gt0012": {
        "id": "gt0012",
        "priority": 1,
        "when": [
          "$gt0008|FRESH Score|<2"
        ],
        "then": [
          "$gt0009|Assessment|=local::at0017|No need of further action|"
        ]
      }
    }
  },
