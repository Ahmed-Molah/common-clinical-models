    "rules": {
      "gt0016": {
        "id": "gt0016",
        "priority": 10,
        "when": [
          "$gt0005|Fever|==null",
          "$gt0010|Non weight-bearing?|==null",
          "$gt0011|ESR > 40mm/h|==null",
          "$gt0012|WBC > 12,000 cells/mm3|==null"
        ],
        "then": [
          "$gt0005|Fever|=0|local::at0010|No|",
          "$gt0010|Non weight-bearing?|=0|local::at0012|No|",
          "$gt0011|ESR > 40mm/h|=0|local::at0014|No|",
          "$gt0012|WBC > 12,000 cells/mm3|=0|local::at0016|No |"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 9,
        "when": [
          "$gt0003|Temperature|.magnitude<=38.5"
        ],
        "then": [
          "$gt0005|Fever|=0|local::at0010|No|"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 8,
        "when": [
          "$gt0009|Non weight-bearing?|==0|local::at0012|No|"
        ],
        "then": [
          "$gt0010|Non weight-bearing?|=0|local::at0012|No|"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 7,
        "when": [
          "$gt0014|Erythrocyte sedimentation rate (ESR)|.magnitude<=40"
        ],
        "then": [
          "$gt0011|ESR > 40mm/h|=0|local::at0014|No|"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 6,
        "when": [
          "$gt0013|White cell count|.magnitude<=12.0"
        ],
        "then": [
          "$gt0012|WBC > 12,000 cells/mm3|=0|local::at0016|No |"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 5,
        "when": [
          "$gt0003|Temperature|.magnitude>38.5"
        ],
        "then": [
          "$gt0005|Fever|=1|local::at0011|Yes|"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 4,
        "when": [
          "$gt0009|Non weight-bearing?|==1|local::at0013|Yes|"
        ],
        "then": [
          "$gt0010|Non weight-bearing?|=1|local::at0013|Yes|"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 3,
        "when": [
          "$gt0014|Erythrocyte sedimentation rate (ESR)|.magnitude>40"
        ],
        "then": [
          "$gt0011|ESR > 40mm/h|=1|local::at0015|Yes|"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 2,
        "when": [
          "$gt0013|White cell count|.magnitude>12.0"
        ],
        "then": [
          "$gt0012|WBC > 12,000 cells/mm3|=1|local::at0017|Yes|"
        ]
      },
      "gt0021": {
        "id": "gt0021",
        "priority": 1,
        "then": [
          "$gt0026|Number of criteria met|.magnitude=(($gt0005.value+$gt0010.value)+$gt0011.value)+$gt0012.value"
        ]
      }
    }
