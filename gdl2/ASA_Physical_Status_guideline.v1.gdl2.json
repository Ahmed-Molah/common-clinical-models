    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-OBSERVATION.asa_physical_status.v0",
        "template_id": "openEHR-EHR-OBSERVATION.asa_physical_status.v0",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          },
          "gt0004": {
            "id": "gt0004",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0005]"
          }
        }
      },
      "gt0005": {
        "id": "gt0005",
        "model_id": "openEHR-EHR-OBSERVATION.asa_physical_status.v0",
        "template_id": "openEHR-EHR-OBSERVATION.asa_physical_status.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0006": {
            "id": "gt0006",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0014]"
          }
        }
      }
    },
    "rules": {
      "gt0007": {
        "id": "gt0007",
        "priority": 12,
        "when": [
          "$gt0003|Description|==1|local::at0008|Normal healthy patient|",
          "$gt0004|Emergency surgery|==0|local::at0006|No|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=1|local::at0015|ASA1|"
        ]
      },
      "gt0008": {
        "id": "gt0008",
        "priority": 11,
        "when": [
          "$gt0003|Description|==2|local::at0009|Patient with mild systemic disease|",
          "$gt0004|Emergency surgery|==0|local::at0006|No|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=2|local::at0016|ASA 2|"
        ]
      },
      "gt0009": {
        "id": "gt0009",
        "priority": 10,
        "when": [
          "$gt0003|Description|==3|local::at0010|Patient with severe systemic disease|",
          "$gt0004|Emergency surgery|==0|local::at0006|No|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=3|local::at0017|ASA 3|"
        ]
      },
      "gt0010": {
        "id": "gt0010",
        "priority": 9,
        "when": [
          "$gt0003|Description|==4|local::at0011|Patient with severe systemic disease that is a constant threat to life|",
          "$gt0004|Emergency surgery|==0|local::at0006|No|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=4|local::at0018|ASA 4|"
        ]
      },
      "gt0011": {
        "id": "gt0011",
        "priority": 8,
        "when": [
          "$gt0003|Description|==5|local::at0012|Moribund patient not expected to survive without the operation|",
          "$gt0004|Emergency surgery|==0|local::at0006|No|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=5|local::at0019|ASA 5|"
        ]
      },
      "gt0012": {
        "id": "gt0012",
        "priority": 7,
        "when": [
          "$gt0003|Description|==6|local::at0013|Declared brain-dead patient whose organs are being removed for donor purposes|",
          "$gt0004|Emergency surgery|==0|local::at0006|No|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=6|local::at0020|ASA 6|"
        ]
      },
      "gt0013": {
        "id": "gt0013",
        "priority": 6,
        "when": [
          "$gt0003|Description|==1|local::at0008|Normal healthy patient|",
          "$gt0004|Emergency surgery|==1|local::at0007|Yes|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=7|local::at0021|ASA 1E|"
        ]
      },
      "gt0014": {
        "id": "gt0014",
        "priority": 5,
        "when": [
          "$gt0003|Description|==2|local::at0009|Patient with mild systemic disease|",
          "$gt0004|Emergency surgery|==1|local::at0007|Yes|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=8|local::at0022|ASA 2E|"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 4,
        "when": [
          "$gt0003|Description|==3|local::at0010|Patient with severe systemic disease|",
          "$gt0004|Emergency surgery|==1|local::at0007|Yes|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=9|local::at0023|ASA 3E|"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 3,
        "when": [
          "$gt0003|Description|==4|local::at0011|Patient with severe systemic disease that is a constant threat to life|",
          "$gt0004|Emergency surgery|==1|local::at0007|Yes|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=10|local::at0024|ASA 4E|"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 2,
        "when": [
          "$gt0003|Description|==5|local::at0012|Moribund patient not expected to survive without the operation|",
          "$gt0004|Emergency surgery|==1|local::at0007|Yes|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=11|local::at0025|ASA 5E|"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 1,
        "when": [
          "$gt0003|Description|==6|local::at0013|Declared brain-dead patient whose organs are being removed for donor purposes|",
          "$gt0004|Emergency surgery|==1|local::at0007|Yes|"
        ],
        "then": [
          "$gt0006|ASA Physical Status|=12|local::at0026|ASA 6E|"
        ]
      }
    }
  },
