    "rules": {
      "gt0029": {
        "id": "gt0029",
        "priority": 10,
        "when": [
          "$gt0004|Murphy's sign|!=null",
          "$gt0005|Right upper abdominal quadrant mass, pain, or tenderness|!=null"
        ],
        "then": [
          "$gt0020|Par A score|.magnitude=$gt0004.value+$gt0005.value"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 9,
        "when": [
          "$gt0006|Fever|!=null",
          "$gt0007|Elevated CRP|!=null",
          "$gt0008|Elevated WBC count|!=null"
        ],
        "then": [
          "$gt0021|Par B score|.magnitude=$gt0006.value+$gt0007.value+$gt0008.value"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 8,
        "when": [
          "$gt0020|Par A score|>=1",
          "($gt0021|Par B score|>=1)||($gt0009|Imaging findings characteristic of acute cholecystitis|.value>=1)"
        ],
        "then": [
          "$gt0025|Diagnosis of acute cholecystitis|=local::at0004|Suspected|"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 7,
        "when": [
          "$gt0020|Par A score|>=1",
          "$gt0021|Par B score|>=1",
          "$gt0009|Imaging findings characteristic of acute cholecystitis|.value>=1"
        ],
        "then": [
          "$gt0025|Diagnosis of acute cholecystitis|=local::at0003|Definite|"
        ]
      },
      "gt0038": {
        "id": "gt0038",
        "priority": 6,
        "when": [
          "!fired($gt0031)",
          "!fired($gt0032)"
        ],
        "then": [
          "$gt0025|Diagnosis of acute cholecystitis|=local::at0005|Entry criteria not met for acute cholecystitis diagnosis|"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 5,
        "when": [
          "$gt0010|Cardiovascular dysfunction|!=null",
          "$gt0011|Neurological dysfunction|!=null",
          "$gt0012|Respiratory dysfunction|!=null",
          "$gt0013|Renal dysfunction|!=null",
          "$gt0014|Hepatic dysfunction|!=null",
          "$gt0015|Hematological dysfunction|!=null"
        ],
        "then": [
          "$gt0022|Grade III score|.magnitude=$gt0010.value+$gt0011.value+$gt0012.value+$gt0013.value+$gt0014.value+$gt0015.value"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 4,
        "when": [
          "$gt0016|Elevated WBC count|!=null",
          "$gt0017|Palpable tender mass in the right upper abdominal quadrant|!=null",
          "$gt0018|Duration of complaints >72 hours|!=null",
          "$gt0019|Marked local inflammation|!=null"
        ],
        "then": [
          "$gt0023|Grade II score|.magnitude=$gt0016.value+$gt0017.value+$gt0018.value+$gt0019.value"
        ]
      },
      "gt0037": {
        "id": "gt0037",
        "priority": 3,
        "when": [
          "(fired($gt0031))||(fired($gt0032))",
          "$gt0022|Grade III score|>=1"
        ],
        "then": [
          "$gt0026|Grade|=local::at0009|III|",
          "$gt0027|Acute cholecystitis severity|=local::at0013|Severe|",
          "$gt0028|30 day mortality|=local::at0016|0.8%|"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 2,
        "when": [
          "(fired($gt0032))||(fired($gt0031))",
          "$gt0023|Grade II score|>=1",
          "!fired($gt0037)"
        ],
        "then": [
          "$gt0026|Grade|=local::at0008|II|",
          "$gt0027|Acute cholecystitis severity|=local::at0012|Moderate|",
          "$gt0028|30 day mortality|=local::at0016|0.8%|"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 1,
        "when": [
          "(fired($gt0031))||(fired($gt0032))",
          "$gt0022|Grade III score|==0",
          "$gt0023|Grade II score|==0"
        ],
        "then": [
          "$gt0026|Grade|=local::at0007|I|",
          "$gt0027|Acute cholecystitis severity|=local::at0011|Mild|",
          "$gt0028|30 day mortality|=local::at0015|1.1%|"
        ]
      }
    }
  },
