{
  "id": "Absolute_Lymphocyte_Count.v0",
  "gdl_version": "2.0",
  "concept": "gt0001",
  "language": {
    "original_language": "ISO_639-1::en"
  },
  "description": {
    "original_author": {
      "date": "2020-02-05",
      "name": "Jack Msonkho",
      "organisation": "Cambio",
      "email": "jacksonhieghts@gmail.com"
    },
    "lifecycle_state": "Not set",
    "details": {
      "en": {
        "id": "en",
        "purpose": "Serves as a surrogate for CD4 count in HIV patients who are naive to antiretroviral therapy in resource-limited areas",
        "keywords": [
          "Lymphocyte ",
          "CD4"
        ],
        "use": "Frequently used in the ED setting because CD4 tests take longer to come back and need patient consent.\n\nUsed in limited-resource settings where CD4 tests are costly or unavailable.",
        "misuse": "Does not aid in the diagnosis of HIV, not to be used as a method of HIV diagnosis.",
        "copyright": "Cambio"
      }
    },
    "other_details": {
      "references": "Shapiro, N. I., Karras, D. J., Leech, S. H., & Heilpern, K. L. (n.d.). Absolute lymphocyte count as a predictor of CD4 count. Annals of Emergency Medicine : Journal of the American College of Emergency Physicians., 32(3 Pt 1), 323–328. https://doi.org/10.1016/s0196-0644(98)70008-3"
    }
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-OBSERVATION.absolute_lymphocyte_count.v0",
        "template_id": "openEHR-EHR-OBSERVATION.absolute_lymphocyte_count.v0",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]/items[at0005]"
          },
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]/items[at0006]"
          }
        }
      },
      "gt0006": {
        "id": "gt0006",
        "model_id": "openEHR-EHR-EVALUATION.absolute_lymphocyte_count.v0",
        "template_id": "openEHR-EHR-EVALUATION.absolute_lymphocyte_count.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0010": {
            "id": "gt0010",
            "path": "/data[at0001]/items[at0004]"
          }
        }
      },
      "gt0017": {
        "id": "gt0017",
        "model_id": "openEHR-EHR-OBSERVATION.absolute_lymphocyte_count.v0",
        "template_id": "openEHR-EHR-OBSERVATION.absolute_lymphocyte_count.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0018": {
            "id": "gt0018",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]/items[at0007]"
          }
        }
      }
    },
    "rules": {
      "gt0008": {
        "id": "gt0008",
        "priority": 4,
        "when": [
          "$gt0003|Lymphocytes|>0,%",
          "$gt0005|White Blood Cell Count|<501,uL"
        ],
        "then": [
          "$gt0018|Lcytes|.magnitude=($gt0003.magnitude*0.01)*($gt0005.magnitude*1000)"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 3,
        "when": [
          "$gt0018|Lcytes|<1000"
        ],
        "then": [
          "$gt0010|Evaluation|=1|local::at0006|If the patient is HIV+, he/she likely has AIDS (CD4 < 200 with 96% specificity)|"
        ]
      },
      "gt0021": {
        "id": "gt0021",
        "priority": 2,
        "when": [
          "$gt0018|Lcytes|>1000"
        ],
        "then": [
          "$gt0010|Evaluation|=2|local::at0007|Cannot reliably predict if CD4 is > or < 200|"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 1,
        "when": [
          "$gt0018|Lcytes|>2000"
        ],
        "then": [
          "$gt0010|Evaluation|=3|local::at0008|The patient likely does not have AIDS (CD4 > 200 with 90-97% sensitivity)|"
        ]
      }
    }
  },
