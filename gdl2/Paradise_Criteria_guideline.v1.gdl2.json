      "$gt0020|Recommendation|='Watchful waiting recommended'"
    ],
    "rules": {
      "gt0021": {
        "id": "gt0021",
        "priority": 5,
        "when": [
          "$gt0003|Temperature > 38.3°C (100.9°F)|!=null",
          "$gt0004|Cervical lymphadenopathy (tender or enlarged (>2 cm) lymph nodes)|!=null",
          "$gt0005|Tonsillar or pharyngeal exudate|!=null",
          "$gt0006|Positive culture for group A β-hemolytic streptococcus|!=null"
        ],
        "then": [
          "$gt0015|Clinical feature score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 4,
        "when": [
          "$gt0007|≥7 sore throat episodes in the last year|!=null",
          "$gt0008|≥5 sore throat episodes in each of the last 2 years|!=null",
          "$gt0009|≥3 sore throat episodes in each of the last 3 years|!=null"
        ],
        "then": [
          "$gt0016|Number of episodes score|.magnitude=$gt0007.value+$gt0008.value+$gt0009.value"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 3,
        "when": [
          "$gt0010|Antibiotics given in conventional dosage for proven|!=null",
          "$gt0011|Suspected streptococcal episodes|!=null"
        ],
        "then": [
          "$gt0017|Treatment score|.magnitude=$gt0010.value+$gt0011.value"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 2,
        "when": [
          "$gt0012|Each episode and qualifying features documented|!=null",
          "$gt0013|If not fully documented, subsequent observance by the clinician of 2 episodes of throat infection with patterns of frequency and clinical features consistent with initial history|!=null"
        ],
        "then": [
          "$gt0018|Documentation score|.magnitude=$gt0012.value+$gt0013.value"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 1,
        "when": [
          "$gt0015|Clinical feature score|>=1",
          "$gt0016|Number of episodes score|>=1",
          "$gt0017|Treatment score|>=1",
          "$gt0018|Documentation score|>=1"
        ],
        "then": [
          "$gt0019|Paradise Criteria|='Meets Paradise Criteria'",
          "$gt0020|Recommendation|='Consider tonsillectomy'"
        ]
      }
    }
