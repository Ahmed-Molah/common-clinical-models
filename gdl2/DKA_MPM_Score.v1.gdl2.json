{
  "id": "DKA_MPM_Score.v1",
  "gdl_version": "2.0",
  "concept": "gt0001",
  "language": {
    "original_language": "ISO_639-1::en"
  },
  "description": {
    "original_author": {
      "date": "2020-07-09",
      "name": "Therese Lindberg",
      "organisation": "Cambio CDS",
      "email": "therese.lindberg@cambio.se"
    },
    "lifecycle_state": "Initial",
    "details": {
      "en": {
        "id": "en",
        "purpose": "Provides information regarding mortality in patients presenting with DKA.",
        "keywords": [
          "diabetic",
          "ketoacidosis",
          "mortality",
          "prediction",
          "model",
          "score",
          "DKA",
          "MPM",
          "glucose",
          "ph",
          "fever",
          "mental state"
        ],
        "use": "Patients with DKA. Study population included patients with  serum glucose >250 mg/dL (14.1 mmol/L), positive urine ketones, and metabolic acidosis (arterial blood pH <7.30 and HCO₃ <15 mEq/L (15 mmol/L).\n\nDKA MPM Score:       Risk:             In-hospital mortality:\n0-14                           Low               0.86%\n15-18                         High              20.8%\n19-25                         Very high       93.3%\n\n",
        "misuse": "This calculator is not externally validated and should be used with caution. It is not intended to routinely disposition patients. The APACHE II Score may be a better mortality predictor.",
        "copyright": "Cambio CDS"
      }
    },
    "other_details": {
      "references": "1. Efstathiou SP, Tsiakou AG, Tsioulos DI, et al. A mortality prediction model in diabetic ketoacidosis. Clin Endocrinol (Oxf). 2002;57(5):595-601."
    }
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-EVALUATION.dka_mpm_score.v0",
        "template_id": "openEHR-EHR-EVALUATION.dka_mpm_score.v0",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0001]/items[at0009]/items[at0013]"
          },
          "gt0004": {
            "id": "gt0004",
            "path": "/data[at0001]/items[at0016]/items[at0018]"
          },
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0001]/items[at0008]/items[at0002]"
          },
          "gt0006": {
            "id": "gt0006",
            "path": "/data[at0001]/items[at0009]/items[at0010]"
          },
          "gt0008": {
            "id": "gt0008",
            "path": "/data[at0001]/items[at0016]/items[at0017]"
          }
        }
      },
      "gt0009": {
        "id": "gt0009",
        "model_id": "openEHR-EHR-EVALUATION.dka_mpm_score.v0",
        "template_id": "openEHR-EHR-EVALUATION.dka_mpm_score.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0010": {
            "id": "gt0010",
            "path": "/data[at0001]/items[at0008]/items[at0005]"
          },
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/items[at0023]"
          },
          "gt0014": {
            "id": "gt0014",
            "path": "/data[at0001]/items[at0024]"
          },
          "gt0015": {
            "id": "gt0015",
            "path": "/data[at0001]/items[at0028]"
          }
        }
      },
      "gt0011": {
        "id": "gt0011",
        "model_id": "openEHR-EHR-OBSERVATION.laboratory_test_result.v1",
        "template_id": "openEHR-EHR-OBSERVATION.laboratory_test_result.v1",
        "type": "INPUT",
        "elements": {
          "gt0012": {
            "id": "gt0012",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[openEHR-EHR-CLUSTER.ph_result.v0]/items[at0001]"
          }
        }
      }
    },
    "default_actions": [
      "$gt0010|pH <7.0|=0|local::at0006|No +0|"
    ],
    "rules": {
      "gt0016": {
        "id": "gt0016",
        "priority": 5,
        "when": [
          "$gt0012|pH|<7,1"
        ],
        "then": [
          "$gt0010|pH <7.0|=4|local::at0007|Yes +4|"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 4,
        "then": [
          "$gt0013|DKA MPM Score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0008.value+$gt0010.value"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 3,
        "when": [
          "$gt0013|DKA MPM Score|>=19",
          "$gt0013|DKA MPM Score|<=25"
        ],
        "then": [
          "$gt0014|Risk|=local::at0027|Very high|",
          "$gt0015|In-hospital mortality |='93.3% In-hospital mortality (scores 19-25)'"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 2,
        "when": [
          "$gt0013|DKA MPM Score|>=15",
          "$gt0013|DKA MPM Score|<19"
        ],
        "then": [
          "$gt0014|Risk|=local::at0026|High|",
          "$gt0015|In-hospital mortality |='20.8% In-hospital mortality (scores 15-18)'"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 1,
        "when": [
          "$gt0013|DKA MPM Score|>=0",
          "$gt0013|DKA MPM Score|<15"
        ],
        "then": [
          "$gt0014|Risk|=local::at0025|Low|",
          "$gt0015|In-hospital mortality |='0.86% In-hospital mortality (scores 0-14)'"
        ]
      }
    }
  },
