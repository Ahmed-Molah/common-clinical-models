        "template_id": "openEHR-EHR-EVALUATION.bisap_score.v1",
        "type": "INPUT",
        "elements": {
          "gt0025": {
            "id": "gt0025",
            "path": "/data[at0001]/items[at0007]"
          },
          "gt0026": {
