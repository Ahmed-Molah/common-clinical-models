    "lifecycle_state": "Initial",
    "details": {
      "en": {
        "id": "en",
        "purpose": "To record the score of BISAP. ",
        "keywords": [
          "BISAP",
          "score",
          "mortality",
          "SIRS",
          "BUN",
          "pleural effusion",
          "mental status",
          "pancreatitis"
        ],
        "use": "Use to predict mortality in pancreatitis. Data should be taken from the first 24 hours of the patient's evaluation.",
        "misuse": "Only use with data taken from the first 24 hours of the patient's evaluation.",
        "copyright": "Cambio CDS"
      }
    },
    "other_details": {
      "references": "1. Wu BU, Johannes RS, Sun X, Tabak Y, Conwell DL, Banks PA. The early prediction of mortality in acute pancreatitis: a large population-based study. Gut. 2008;57(12):1698-703.\n"
    }
  },
