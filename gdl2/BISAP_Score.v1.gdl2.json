    },
    "default_actions": [
      "$gt0021|BUN>=25mg/dL (8.9mmol/L)|=0|local::at0008|No|"
    ],
    "rules": {
      "gt0027": {
        "id": "gt0027",
        "priority": 4,
        "when": [
          "($gt0015|BUN|>=25,mg/dL)||($gt0015|BUN|>=8.9,mmol/L)"
        ],
        "then": [
          "$gt0021|BUN>=25mg/dL (8.9mmol/L)|=1|local::at0009|Yes|"
        ]
      },
      "gt0028": {
        "id": "gt0028",
        "priority": 3,
        "when": [
          "$gt0005|Age|>60,a"
        ],
        "then": [
          "$gt0023|Age>60 years|=1|local::at0013|Yes|"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 2,
        "when": [
          "$gt0005|Age|<=60,a"
        ],
        "then": [
          "$gt0023|Age>60 years|=0|local::at0012|No|"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 1,
        "when": [
          "$gt0026|Impaired mental status|!=null",
          "$gt0023|Age>60 years|!=null",
          "$gt0021|BUN>=25mg/dL (8.9mmol/L)|!=null",
          "$gt0025|SIRS Criteria>=2|!=null",
          "$gt0031|Pleural effusion present|!=null"
        ],
        "then": [
          "$gt0020|BISAP score|.magnitude=$gt0021.value+$gt0023.value+$gt0018.value+$gt0022.value+$gt0019.value"
        ]
      }
    }
  },
