        "template_id": "openEHR-EHR-OBSERVATION.lab_test_serum_ca_125.v0",
        "type": "INPUT",
        "elements": {
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          }
        }
      }
    },
    "default_actions": [
      "$gt0016|Ultrasound score|=1"
    ],
    "rules": {
      "gt0015": {
        "id": "gt0015",
        "priority": 5,
        "when": [
          "$gt0003|Multiloculated cysts|!=null",
          "$gt0004|Solid areas|!=null",
          "$gt0005|Bilateral lesions|!=null",
          "$gt0006|Ascites|!=null",
          "$gt0007|Intra-abdominal metastases|!=null"
        ],
        "then": [
          "$gt0023|Ultrasound features score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 4,
        "when": [
          "$gt0023|Ultrasound features score|>=2"
        ],
        "then": [
          "$gt0016|Ultrasound score|=3"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 3,
        "when": [
          "fired($gt0015)",
          "$gt0013|Serum CA-125|!=null"
        ],
        "then": [
          "$gt0011|RMI|.magnitude=$gt0016*$gt0013.magnitude*$gt0008.value"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 2,
        "when": [
          "$gt0011|RMI|<=200"
        ],
        "then": [
          "$gt0010|Risk of malignancy|=local::at0023|Low|"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 1,
        "when": [
          "$gt0011|RMI|>200"
        ],
        "then": [
          "$gt0010|Risk of malignancy|=local::at0024|High|"
        ]
      }
    }
  },
