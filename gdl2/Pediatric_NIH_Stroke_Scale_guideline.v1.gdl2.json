  "ontology": {
    "term_definitions": {
      "en": {
        "id": "en",
        "terms": {
          "gt0001": {
            "id": "gt0001",
            "text": "Pediatric NIH Stroke Scale (NIHSS)",
            "description": "Pediatric NIH Stroke Scale (NIHSS) quantifies stroke severity using a child-specific version of the NIH Stroke Score."
          },
          "gt0003": {
            "id": "gt0003",
            "text": "1A. Level of consciousness",
            "description": "*"
          },
          "gt0004": {
            "id": "gt0004",
            "text": "1B. Ask age and to point out family member  ",
            "description": "Ask the child “how old are you?”, give credit if child states correct age or shows correct number of fingers for age; ask the child “where is X?” (X = parent or other familiar family member present), give credit if child correctly points/gazes purposefully in the direction of the family member "
          },
          "gt0005": {
            "id": "gt0005",
            "text": "1C. Command to blink eyes and touch nose",
            "description": "*"
          },
          "gt0006": {
            "id": "gt0006",
            "text": "2. Horizontal extraocular movements",
            "description": "Only assess horizontal gaze"
          },
          "gt0007": {
            "id": "gt0007",
            "text": "3. Visual fields",
            "description": "Use finger counting (if >6 years old) or visual threat (if 2-6 years old) as appropriate"
          },
          "gt0008": {
            "id": "gt0008",
            "text": "4. Facial palsy",
            "description": "*"
          },
          "gt0009": {
            "id": "gt0009",
            "text": "5A. Left arm motor drift",
            "description": "Drift is scored if the arm falls before 10 sec; for children too young to follow precise directions or uncooperative, grade power by observation of spontaneous or elicited movement"
          },
          "gt0010": {
            "id": "gt0010",
            "text": "5B. Right arm motor drift",
            "description": "Drift is scored if the arm falls before 10 sec; for children too young to follow precise directions or uncooperative, grade power by observation of spontaneous or elicited movement"
          },
          "gt0011": {
            "id": "gt0011",
            "text": "6A. Left leg motor drift",
            "description": "Drift is scored if the leg falls before 5 sec; for children too young to follow precise directions or uncooperative, grade power by observation of spontaneous or elicited movement"
          },
          "gt0012": {
            "id": "gt0012",
            "text": "6B. Right leg motor drift",
            "description": "Drift is scored if the the leg falls before 5 sec; for children too young to follow precise directions or uncooperative, power in each limb should be graded by observation of spontaneous or elicited movement"
          },
          "gt0013": {
            "id": "gt0013",
            "text": "7. Limb ataxia",
            "description": "Ask child to reach for a toy, or ask child to kick a toy or the examiner’s hand in children <5 years or otherwise uncooperative for the standard exam"
          },
          "gt0014": {
            "id": "gt0014",
            "text": "8: Sensation",
            "description": "Pin-prick test; for children too young or otherwise uncooperative for reporting gradations of sensory loss, observe for any behavioral response to pin prick"
          },
          "gt0015": {
            "id": "gt0015",
            "text": "9. Best language",
            "description": "If age ≥6 years with normal language development before onset of stroke, ask child to describe picture, to name items, repeat words, read sentences; for children age 2-6 years, score item based on observations of language comprehension and speech during the examination"
          },
          "gt0016": {
            "id": "gt0016",
            "text": "10. Dysarthria",
            "description": "Ask patient to read or repeat words"
          },
          "gt0017": {
            "id": "gt0017",
            "text": "11. Extinction and inattention",
            "description": "*"
          },
          "gt0019": {
            "id": "gt0019",
            "text": "NIHSS",
            "description": "*"
          },
          "gt0020": {
            "id": "gt0020",
            "text": "Interpretation",
            "description": "*"
          },
          "gt0021": {
            "id": "gt0021",
            "text": "Set NIHS score"
          }
        }
      }
    }
