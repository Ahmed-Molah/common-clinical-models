  "description": {
    "original_author": {
      "date": "2020-11-29",
      "name": "Therese Lindberg",
      "organisation": "Cambio CDS",
      "email": "therese.lindberg@cambio.se"
    },
    "lifecycle_state": "Initial",
    "details": {
      "en": {
        "id": "en",
        "purpose": "To determine which patients require chest imaging after blunt trauma.",
        "keywords": [
          "rapid deceleration mechanism",
          "chest pain",
          "intoxication",
          "altered mental status",
          "distracting painful injury",
          "tenderness to chest wall palpation",
          "NEXUS",
          "score",
          "thoracic imaging required",
          "CT",
          "instrument for blunt chest trauma"
        ],
        "use": "NEXUS Score is calculated from 7 parameters: age, rapid deceleration mechanism, chest pain, intoxication, altered mental status, distracting painful injury, tenderness to chest wall palpation. \n\nApplies to patients ≥15 years old with blunt trauma within the past 24 hours in the ED.",
        "misuse": "Do not use if patient <15 years old.",
        "copyright": "@CambioCDS"
      }
    },
    "other_details": {
      "references": "1. Rodriguez RM, Hendey GW, Mower W, Kea B, Fortman J, Merchant G, Hoffman JR. Derivation of a decision instrument for selective chest radiography in blunt trauma. J Trauma. 2011 Sep;7(3):549-53. PMID: 21045745."
    }
  },
