    "rules": {
      "gt0015": {
        "id": "gt0015",
        "priority": 5,
        "when": [
          "$gt0010|Age|>60,a"
        ],
        "then": [
          "$gt0012|Age >60 years|=1|local::at0004|Yes|"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 4,
        "when": [
          "$gt0010|Age|<=60,a"
        ],
        "then": [
          "$gt0012|Age >60 years|=0|local::at0003|No|"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 3,
        "when": [
          "$gt0010|Age|!=null",
          "$gt0003|Rapid deceleration mechanism (Fall from >20 ft (>6m), MVC >40 mph (>64km/h)) |!=null",
          "$gt0004|Chest pain|!=null",
          "$gt0005|Intoxication|!=null",
          "$gt0006|Altered mental status|!=null",
          "$gt0007|Distracting painful injury|!=null",
          "$gt0008|Tenderness to chest wall palpation |!=null"
        ],
        "then": [
          "$gt0013|NEXUS Score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0012.value"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 2,
        "when": [
          "$gt0013|NEXUS Score|>=1"
        ],
        "then": [
          "$gt0014|Interpretation|=local::at0026|In well-appearing patient with no evidence of multi-organ injury, consider Chest X-ray (CXR) only without CT. In ill-appearing patients and/or those who will receive workup for other serious injury, consider chest CT as well.|"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 1,
        "when": [
          "$gt0013|NEXUS Score|==0"
        ],
        "then": [
          "$gt0014|Interpretation|=local::at0025|No thoracic imaging required. NEXUS Score is 99% sensitive for clinically significant thoracic injury.|"
        ]
      }
    }
  },
