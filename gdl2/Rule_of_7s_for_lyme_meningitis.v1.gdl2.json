    "details": {
      "en": {
        "id": "en",
        "purpose": "To record the risk of Lyme meningitis from aseptic meningitis.",
        "keywords": [
          "lyme meningitis",
          "risk",
          "CSF",
          "cerebrospinal fluid",
          "headache"
        ],
        "use": "Use to record the risk of Lyme meningitis from aseptic meningitis.\n\nThe reule of 7s is calculated based on three parameters: number of days of headache, CSF mononuclear cells and  7th (or other) cranial nerve palsy.\n\nRule of 7s            Risk\n0 points               Low risk for Lyme meningitis\n1â€“3 points           Not low risk for Lyme meningitis",
        "copyright": "@CambioCDS"
      }
    },
    "other_details": {
      "references": "1. Garro AC, Rutman M, Simonsen K, Jaeger JL, Chapin K, Lockhart G. Prospective validation of a clinical prediction model for Lyme meningitis in children. Pediatrics. 2009;123(5):e829-34."
    }
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-EVALUATION.rule_of_7s_for_lyme_meningitis.v0",
        "template_id": "openEHR-EHR-EVALUATION.rule_of_7s_for_lyme_meningitis.v0",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0001]/items[at0002]"
          },
          "gt0004": {
            "id": "gt0004",
            "path": "/data[at0001]/items[at0005]"
          },
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0001]/items[at0006]"
          }
        }
      },
      "gt0006": {
        "id": "gt0006",
        "model_id": "openEHR-EHR-EVALUATION.rule_of_7s_for_lyme_meningitis.v0",
        "template_id": "openEHR-EHR-EVALUATION.rule_of_7s_for_lyme_meningitis.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0007": {
            "id": "gt0007",
            "path": "/data[at0001]/items[at0011]"
          },
          "gt0008": {
            "id": "gt0008",
            "path": "/data[at0001]/items[at0012]"
          }
        }
      }
    },
    "rules": {
      "gt0009": {
        "id": "gt0009",
        "priority": 3,
        "when": [
          "$gt0003|Number of days of headache|!=null",
          "$gt0004|CSF (cerebrospinal fluid) mononuclear cells (Lymphocytes and monocytes)|!=null",
          "$gt0005|7th (or other) cranial nerve palsy|!=null"
        ],
        "then": [
          "$gt0007|Rule of 7s|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value"
        ]
      },
      "gt0011": {
        "id": "gt0011",
        "priority": 2,
        "when": [
          "$gt0007|Rule of 7s|>0",
          "$gt0007|Rule of 7s|<=3"
        ],
        "then": [
          "$gt0008|Risk|=local::at0014|Not low risk for Lyme meningitis|"
        ]
      },
      "gt0010": {
        "id": "gt0010",
        "priority": 1,
        "when": [
          "$gt0007|Rule of 7s|==0"
        ],
        "then": [
          "$gt0008|Risk|=local::at0013|Low risk for Lyme meningitis|"
        ]
      }
    }
  },
