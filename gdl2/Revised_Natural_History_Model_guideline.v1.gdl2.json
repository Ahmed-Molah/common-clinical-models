    "rules": {
      "gt0030": {
        "id": "gt0030",
        "priority": 11,
        "when": [
          "$gt0007|Bilirubin|==0,mg/dl"
        ],
        "then": [
          "$gt0020|Warning to Bilirubin|='Too low, please change to proceed.'"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 10,
        "when": [
          "$gt0007|Bilirubin|>20,mg/dl",
          "$gt0007|Bilirubin|<=50,mg/dl"
        ],
        "then": [
          "$gt0020|Warning to Bilirubin|='Very high, double-check.'"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 9,
        "when": [
          "$gt0007|Bilirubin|>50,mg/dl"
        ],
        "then": [
          "$gt0020|Warning to Bilirubin|='Too high, please change to proceed.'"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 8,
        "when": [
          "$gt0009|Aspartate aminotransferase (AST)|==0,U/l"
        ],
        "then": [
          "$gt0021|Warning to AST|='Too low, please change to proceed.'"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 7,
        "when": [
          "$gt0009|Aspartate aminotransferase (AST)|>0,U/l",
          "$gt0009|Aspartate aminotransferase (AST)|<=3,U/l"
        ],
        "then": [
          "$gt0021|Warning to AST|='Very low, double-check.'"
        ]
      },
      "gt0028": {
        "id": "gt0028",
        "priority": 6,
        "when": [
          "$gt0009|Aspartate aminotransferase (AST)|>4000,U/l",
          "$gt0009|Aspartate aminotransferase (AST)|<=10000,U/l"
        ],
        "then": [
          "$gt0021|Warning to AST|='Very high, double-check.'"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 5,
        "when": [
          "$gt0009|Aspartate aminotransferase (AST)|>10000,U/l"
        ],
        "then": [
          "$gt0021|Warning to AST|='Too high, please change to proceed.'"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 4,
        "when": [
          "$gt0019|Serum Albumin|<10,gm/dl"
        ],
        "then": [
          "$gt0022|Warning to Albumin|='Very low, double-check.'"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 3,
        "when": [
          "$gt0019|Serum Albumin|>60,gm/dl",
          "$gt0019|Serum Albumin|<=70,gm/dl"
        ],
        "then": [
          "$gt0022|Warning to Albumin|='Very high, double-check.'"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 2,
        "when": [
          "$gt0019|Serum Albumin|>70,gm/dl"
        ],
        "then": [
          "$gt0022|Warning to Albumin|='Too high, please change to proceed.'"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 1,
        "when": [
          "$gt0005|Age|!=null",
          "$gt0007|Bilirubin|!=null",
          "$gt0009|Aspartate aminotransferase (AST)|!=null",
          "$gt0011|Variceal bleeding|!=null",
          "$gt0019|Serum Albumin|!=null",
          "$gt0005|Age|.unit=='a'",
          "$gt0007|Bilirubin|.unit=='mg/dl'",
          "$gt0019|Serum Albumin|.unit=='gm/dl'",
          "!fired($gt0030)",
          "!fired($gt0032)",
          "!fired($gt0027)",
          "!fired($gt0029)",
          "!fired($gt0035)"
        ],
        "then": [
          "$gt0013|Risk Score|.magnitude=0.03*$gt0005.magnitude+0.54*log($gt0007.magnitude)+0.54*log($gt0009.magnitude)+1.24*$gt0011.value-(0.84*$gt0019.magnitude)",
          "$gt0013|Risk Score|.precision=2",
          "$gt0013|Risk Score|.unit='1'"
        ]
      }
    }
  },
