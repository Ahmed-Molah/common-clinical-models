		>
		rules = <
			["gt0013"] = (RULE) <
				when = <"$gt0017==null",...>
				then = <"$gt0017.precision=2", "$gt0017.magnitude=((($gt0003.magnitude+$gt0004.magnitude)+$gt0008.magnitude)+$gt0006.magnitude)">
