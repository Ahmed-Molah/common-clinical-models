        "terms": {
          "gt0001": {
            "id": "gt0001",
            "text": "AS-18",
            "description": "AS-18 är ett självskattningsinstrument som används för identifiering och utvärdering av affektiva sjukdomar. Mer än 10p indikerar förekomst av depression och/eller mani. \n"
          },
          "gt0004": {
            "id": "gt0004",
            "text": "*(en) ...having been so talkative that it has been hard for others to make themselves heard? ",
            "description": "*(en) Mania - talkativeness."
          },
          "gt0005": {
            "id": "gt0005",
            "text": "*(en) ...sleeping more than usual?",
            "description": "*(en) Depression - increased sleep."
          },
          "gt0006": {
            "id": "gt0006",
            "text": "*(en) ...having less need for sleep but still felt energetic and awake?",
            "description": "*(en) Mania - less need for sleep."
          },
          "gt0007": {
            "id": "gt0007",
            "text": "*(en) ...feeling hopeless?",
            "description": "*(en) Depression - hopelessness."
          },
          "gt0008": {
            "id": "gt0008",
            "text": "*(en) ...your movements have been slower?",
            "description": "*(en) Depression - retardation."
          },
          "gt0009": {
            "id": "gt0009",
            "text": "*(en) ...being wound up or overactive?",
            "description": "*(en) Mania - overactive."
          },
          "gt0010": {
            "id": "gt0010",
            "text": "*(en) ...being so physically restless that you have had trouble keeping still?",
            "description": "*(en) Mania - agitation."
          },
          "gt0011": {
            "id": "gt0011",
            "text": "*(en) ...that your thoughts race?",
            "description": "*(en) Mania - racing thoughts."
          },
          "gt0013": {
            "id": "gt0013",
            "text": "*(en) ...feeling low or depressed?",
            "description": "*(en) Depression."
          },
          "gt0014": {
            "id": "gt0014",
            "text": "*(en) ...inability to take an interest or pleasure in things that you normally enjoy?",
            "description": "*(en) Depression - anhedonia."
          },
          "gt0015": {
            "id": "gt0015",
            "text": "*(en) ...a lack of energy?",
            "description": "*(en) Depression - low energy."
          },
          "gt0016": {
            "id": "gt0016",
            "text": "*(en) ...feelings of guilt or worthlessness?",
            "description": "*(en) Depression - guilt."
          },
          "gt0017": {
            "id": "gt0017",
            "text": "*(en) ...that your thoughts have been sluggish and slow?",
            "description": "*(en) Depression - slow thinking."
          },
          "gt0018": {
            "id": "gt0018",
            "text": "*(en) ...that you have been over confident?",
            "description": "*(en) Mania - increased self-esteem."
          },
          "gt0019": {
            "id": "gt0019",
            "text": "*(en) ...that you have had an overly strong sense of happiness and increase in interest?",
            "description": "*(en) Mania - euphoria."
          },
          "gt0020": {
            "id": "gt0020",
            "text": "*(en) ...that you have had thoughts of harming yourself or taking your own life?",
            "description": "*(en) Depression - suicidal ideation."
          },
          "gt0021": {
            "id": "gt0021",
            "text": "*(en) ...that you have been taking risks; for example with money, in traffic or in your social contacts?",
            "description": "*(en) Mania - risk-taking."
          },
          "gt0040": {
            "id": "gt0040",
            "text": "*(en) Depression Score",
            "description": "*(en) Sum of all questions related to depression."
          },
          "gt0041": {
            "id": "gt0041",
            "text": "*(en) Mania Score",
            "description": "*(en) Sum of all questions related to mania."
          },
          "gt0061": {
            "id": "gt0061",
            "text": "Beräkna poäng för depression"
          },
          "gt0062": {
            "id": "gt0062",
            "text": "Beräkna poäng för mani"
          },
          "gt0012": {
            "id": "gt0012",
            "text": "*(en) ...that you have been easily irritated?",
            "description": "*(en) Mania - irritability."
          }
