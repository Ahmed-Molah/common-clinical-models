    "sv": {
      "name": "Opioid Risk Tool",
      "description": "Värdera risken för beroende vid bruk av opioider."
    },
    "en": {
      "name": "Opioid Risk Tool",
      "description": "Evaluate potential risk of drug abuse including alcohol, illegal and prescription drub abuse"
    }
  },
  "resourceDescription": {
    "originalAuthor": {
      "date": "2016-01-28",
      "name": "Syeeda S Farruque",
      "organisation": "Cambio Healthcare Systems"
