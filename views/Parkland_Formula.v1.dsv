<#assign weight_ehr_data = body_weight_entry_ehr_data + "[0].elements['/data{at0002}/events{at0003}/data{at0001}/items{at0004}']">
<#assign event_time_ehr_data = body_weight_entry_ehr_data + "[0].elements['/data/events/time']">
