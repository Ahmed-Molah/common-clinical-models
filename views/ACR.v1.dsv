    "en": {
      "name": "Albumin:Creatinine Ratio",
      "description": "Calculates urinary albumin:creatinine ratio (ACR)"
    }
  },
  "resourceDescription": {
    "originalAuthor": {
      "email": "info@cambio.se",
      "organisation": "Cambio Healthcare Systems",
      "name": "Eneimi Allwell-Brown",
